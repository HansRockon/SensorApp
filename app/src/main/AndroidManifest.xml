<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hansrajbissessur.sensorapp"
    android:versionCode = "1"
    android:versionName="1.1">

    <uses-permission android:name="android.permission.ACCESS_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
    <meta-data
        android:name="com.facebook.sdk.ApplicationId"
        android:value="@string/facebook_app_id"/>
        <activity
            android:name=".Welcome"
            android:label="@string/app_name"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MenuNavigation"
            android:label="@string/title_welcome"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".Intro"
            android:label="@string/title_activity_intro"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".ListOfSensors"
            android:label="@string/title_activity_list_of_sensors"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".AccelerometerTest"
            android:label="@string/title_activity_accelerometer_test"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".CompassActivity"
            android:label="@string/title_activity_compass"
            android:screenOrientation="sensorPortrait" >
        </activity>
        <activity
            android:name=".Distance"
            android:label="@string/title_activity_distance"
            android:screenOrientation="sensorPortrait" >
        </activity>
        <activity android:name="com.facebook.FacebookActivity"
            android:configChanges=
                "keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:label="@string/app_name" />
    </application>

</manifest>
