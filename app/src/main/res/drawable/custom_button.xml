<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="false">

        <shape  android:shape="rectangle">
            <gradient 
                android:startColor="#F44336" 
                android:centerColor="#F44336" 
                android:endColor="#F44336"
                android:angle="90"/>
            <corners 
        android:radius="3dp"/>
    <stroke 
        android:width="2dp" android:color="#F44336"/>
    <padding 
        android:left="15dp"
        android:top="5dp"
        android:right="15dp"
        android:bottom="5dp"/>
                
        </shape>
    </item>
    
    <item android:state_hovered="true">
        <shape  android:shape="rectangle">
            <gradient 
                android:startColor="#BDBDBD"
                android:centerColor="#BDBDBD"
                android:endColor="#BDBDBD"/>
            <corners 
        android:radius="3dp"/>
    <stroke 
        android:width="2dp" android:color="#757575"/>
    <padding 
        android:left="15dp"
        android:top="5dp"
        android:right="15dp"
        android:bottom="5dp"/>
                
        </shape>
    </item>

    <item android:state_pressed="true">

        <shape  android:shape="rectangle">
            <gradient 
                android:startColor="#C62828"
                android:centerColor="#C62828"
                android:endColor="#C62828"/>
            <corners 
        android:radius="3dp"/>
    <stroke 
        android:width="4dp" android:color="#B71C1C"/>
    <padding 
        android:left="15dp"
        android:top="5dp"
        android:right="15dp"
        android:bottom="5dp"/>
                
        </shape>
    </item>

</selector>
