<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="false">

        <shape  android:shape="rectangle">
            <gradient 
                android:startColor="#2196F3"
                android:centerColor="#2196F3"
                android:endColor="#2196F3"/>
            <corners 
        android:radius="3dp"/>
    <stroke 
        android:width="2dp" android:color="#2196F3"/>
    <padding 
        android:left="15dp"
        android:top="5dp"
        android:right="15dp"
        android:bottom="5dp"/>
                
        </shape>
    </item>
    
    <item android:state_hovered="true">
        <shape  android:shape="rectangle">
            <gradient 
                android:startColor="#1976D2"
                android:centerColor="#1976D2"
                android:endColor="#1976D2"/>
            <corners 
        android:radius="3dp"/>
    <stroke 
        android:width="2dp" android:color="#1976D2"/>
    <padding 
        android:left="15dp"
        android:top="5dp"
        android:right="15dp"
        android:bottom="5dp"/>
                
        </shape>
    </item>

    <item android:state_pressed="true">

        <shape  android:shape="rectangle">
            <gradient 
                android:startColor="#1565C0"
                android:centerColor="#1565C0"
                android:endColor="#1565C0"/>
            <corners 
        android:radius="3dp"/>
    <stroke 
        android:width="4dp" android:color="#1565C0"/>
    <padding 
        android:left="15dp"
        android:top="5dp"
        android:right="15dp"
        android:bottom="5dp"/>
                
        </shape>
    </item>

</selector>
